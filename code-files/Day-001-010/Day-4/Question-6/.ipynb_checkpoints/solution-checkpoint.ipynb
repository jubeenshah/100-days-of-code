    "def staircase(n):\n",
    "    count = 1\n",
    "    while n >0:\n",
    "        space = \" \"* (n-1)\n",
    "        hashtag = \"#\"*count\n",
    "        print(space+hashtag)\n",
    "        n -= 1\n",
    "        count+=1\n",
    "\n",
    "staircase(19)"
